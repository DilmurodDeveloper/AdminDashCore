@page "{id:int}"
@model AdminDashCore.Pages.Admin.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete Order";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-trash-fill me-2"></i>Confirm Delete
            </h4>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle-fill me-1"></i>
                Are you sure you want to delete this order?
            </div>

            <dl class="row">
                <dt class="col-sm-4"><i class="bi bi-hash text-secondary me-1"></i> Order Number</dt>
                <dd class="col-sm-8">@Model.Order?.Id</dd>

                <dt class="col-sm-4"><i class="bi bi-person-fill text-primary me-1"></i> Customer Name</dt>
                <dd class="col-sm-8">@Model.Order?.Client?.Name</dd>

                <dt class="col-sm-4"><i class="bi bi-currency-dollar text-warning me-1"></i> Total Amount</dt>
                <dd class="col-sm-8">@Model.Order?.TotalAmount.ToString("C")</dd>
            </dl>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Order.Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
