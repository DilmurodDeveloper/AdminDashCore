@page "{id:int}"
@model AdminDashCore.Pages.Admin.Orders.DetailsModel
@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-receipt text-white me-2"></i>Order Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    <i class="bi bi-person-fill text-primary me-1"></i> <strong>Client:</strong>
                </dt>
                <dd class="col-sm-9">@Model.Order?.Client?.Name</dd>

                <dt class="col-sm-3">
                    <i class="bi bi-calendar-event text-success me-1"></i> <strong>Order Date:</strong>
                </dt>
                <dd class="col-sm-9">@Model.Order?.OrderDate.ToShortDateString()</dd>

                <dt class="col-sm-3">
                    <i class="bi bi-currency-dollar text-warning me-1"></i> <strong>Total Amount:</strong>
                </dt>
                <dd class="col-sm-9">@Model.Order?.TotalAmount.ToString("C")</dd>

                <dt class="col-sm-3">
                    <i class="bi bi-flag-fill text-danger me-1"></i> <strong>Status:</strong>
                </dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Order?.Status == "Completed" ? "success" :
                           Model.Order?.Status == "Pending" ? "warning" :
                           Model.Order?.Status == "danger" ? "danger" : "secondary")">
                        @Model.Order?.Status
                    </span>
                </dd>
            </dl>

            <a asp-page="Index" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>
