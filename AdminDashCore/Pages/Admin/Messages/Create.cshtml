@page
@model AdminDashCore.Pages.Admin.Messages.CreateModel
@{
    ViewData["Title"] = "Create Message";
    Layout = "_AdminLayout";
}

<h2>Create Message</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Message.ClientId" class="form-label">Client</label>
        <select asp-for="Message.ClientId" class="form-control" asp-items="Model.ClientList"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Message.Content" class="form-label">Content</label>
        <textarea asp-for="Message.Content" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Send Message</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
