@page
@model AdminDashCore.Pages.Admin.Messages.CreateModel
@{
    ViewData["Title"] = "Create Message";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">✉️ Create New Message</h4>
            <a asp-page="Index" class="btn btn-sm btn-light">🔙 Back to List</a>
        </div>

        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Message.ClientId" class="form-label">👤 Client</label>
                    <select asp-for="Message.ClientId" class="form-select" asp-items="Model.ClientList">
                        <option value="">-- Select Client --</option>
                    </select>
                    <span asp-validation-for="Message.ClientId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Message.Content" class="form-label">📝 Content</label>
                    <textarea asp-for="Message.Content" class="form-control" rows="5" placeholder="Type your message here..."></textarea>
                    <span asp-validation-for="Message.Content" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        📤 Send Message
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">↩️ Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
