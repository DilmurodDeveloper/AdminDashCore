@page "{id:int}"
@model AdminDashCore.Pages.Admin.Messages.DetailsModel
@{
    ViewData["Title"] = "Message Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📄 Message Details</h4>
            <a asp-page="Index" class="btn btn-sm btn-light">🔙 Back to List</a>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">👤 Client</dt>
                <dd class="col-sm-9">@Model.Message?.Client?.Name</dd>

                <dt class="col-sm-3">📝 Content</dt>
                <dd class="col-sm-9">@Model.Message?.Content</dd>

                <dt class="col-sm-3">📅 Sent At</dt>
                <dd class="col-sm-9">@Model.Message?.SentAt.ToString("f")</dd>

                <dt class="col-sm-3">📬 Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Message?.IsRead == true)
                    {
                        <span class="badge bg-success">✔️ Read</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">📪 Unread</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>
