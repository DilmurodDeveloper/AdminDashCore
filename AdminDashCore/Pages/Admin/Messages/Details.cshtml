@page "{id:int}"
@model AdminDashCore.Pages.Admin.Messages.DetailsModel
@{
    ViewData["Title"] = "Message Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h2>Message Details</h2>

<dl class="row">
    <dt class="col-sm-2">Client:</dt>
    <dd class="col-sm-10">@Model.Message?.Client?.Name</dd>

    <dt class="col-sm-2">Content:</dt>
    <dd class="col-sm-10">@Model.Message?.Content</dd>

    <dt class="col-sm-2">Sent At:</dt>
    <dd class="col-sm-10">@Model.Message?.SentAt.ToString("g")</dd>

    <dt class="col-sm-2">Read Status:</dt>
    <dd class="col-sm-10">@Model.Message?.IsRead ? "Read" : "Unread"</dd>
</dl>

<a asp-page="Index" class="btn btn-secondary">Back</a>
