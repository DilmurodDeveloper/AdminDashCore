@page "{id:int}"
@model AdminDashCore.Pages.Admin.Messages.DeleteModel
@{
    ViewData["Title"] = "Delete Message";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="card shadow border-0 border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">🗑️ Delete Message</h4>
            <a asp-page="Index" class="btn btn-sm btn-light">🔙 Back to List</a>
        </div>

        <div class="card-body">
            <div class="alert alert-danger">
                ⚠️ Are you sure you want to permanently delete this message?
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-3">📝 Content</dt>
                <dd class="col-sm-9">@Model.Message?.Content</dd>

                <dt class="col-sm-3">📅 Sent At</dt>
                <dd class="col-sm-9">@Model.Message?.SentAt.ToShortDateString()</dd>

                <dt class="col-sm-3">📬 Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Message?.IsRead == true)
                    {
                        <span class="badge bg-success">✔️ Read</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">📪 Unread</span>
                    }
                </dd>
            </dl>

            <form method="post" class="d-flex justify-content-start">
                <input type="hidden" asp-for="Message.Id" />
                <button type="submit" class="btn btn-danger me-2">🗑️ Delete</button>
                <a asp-page="Index" class="btn btn-secondary">↩️ Cancel</a>
            </form>
        </div>
    </div>
</div>
