@page "{id:int}"
@model AdminDashCore.Pages.Admin.Messages.DeleteModel
@{
    ViewData["Title"] = "Delete Message";
    Layout = "_AdminLayout";
}

<h2>Delete Message</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this message?
</div>

<dl class="row">
    <dt class="col-sm-3">Content</dt>
    <dd class="col-sm-9">@Model.Message?.Content</dd>

    <dt class="col-sm-3">Sent At</dt>
    <dd class="col-sm-9">@Model.Message?.SentAt.ToShortDateString()</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Message?.IsRead ? "Read" : "Unread"</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Message.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
