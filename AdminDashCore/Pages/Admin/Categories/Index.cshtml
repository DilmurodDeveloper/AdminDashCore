@page
@model AdminDashCore.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📂 Categories</h4>
            <a class="btn btn-light btn-sm" asp-page="Create">➕ Create New</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 70%;"><i class="bi bi-tag-fill text-secondary me-1"></i> Name</th>
                        <th class="text-center"><i class="bi bi-gear-wide-connected"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Categories != null && Model.Categories.Any())
                    {
                        var index = 1;
                        foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.Name</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i> Edit</a>
                                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i> Delete</a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                No categories found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
