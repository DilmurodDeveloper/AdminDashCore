@page
@model AdminDashCore.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">📂 Categories</h4>
                    <a class="btn btn-light btn-sm" asp-page="Create">➕ Create New</a>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 75%;">Name</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Categories != null && Model.Categories.Any())
                            {
                                foreach (var item in Model.Categories)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td class="text-center">
                                            <a class="btn btn-sm btn-outline-warning" asp-page="Edit" asp-route-id="@item.Id">✏️ Edit</a>
                                            <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@item.Id">🗑️ Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-muted py-4">
                                        No categories found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
