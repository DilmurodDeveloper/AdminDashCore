@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Dashboard</h2>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary shadow">
            <div class="card-body fs-5">📦 Products</div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="fw-bold fs-4">@Model.ProductCount</span>
                <a class="text-white text-decoration-none" href="/Admin/Products">View →</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning shadow">
            <div class="card-body fs-5">🛒 Orders</div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="fw-bold fs-4">@Model.OrderCount</span>
                <a class="text-white text-decoration-none" href="/Admin/Orders">View →</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success shadow">
            <div class="card-body fs-5">👥 Clients</div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="fw-bold fs-4">@Model.ClientCount</span>
                <a class="text-white text-decoration-none" href="/Admin/Clients">View →</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger shadow">
            <div class="card-body fs-5">✉️ Messages</div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="fw-bold fs-4">@Model.MessageCount</span>
                <a class="text-white text-decoration-none" href="/Admin/Messages">View →</a>
            </div>
        </div>
    </div>
</div>

<!-- Latest Clients Table -->
<div class="card mt-4">
    <div class="card-header bg-secondary text-white">🕵️‍♂️ Latest Clients</div>
    <div class="card-body">
        <table class="table table-bordered table-striped" id="clientsTable">
            <thead class="table-secondary">
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Office</th>
                    <th>Start Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.LatestClients!)
                {
                    <tr>
                        <td>@client.Name</td>
                        <td>@client.Position</td>
                        <td>@client.Office</td>
                        <td>@client.StartDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#clientsTable').DataTable();
        });
    </script>
}
