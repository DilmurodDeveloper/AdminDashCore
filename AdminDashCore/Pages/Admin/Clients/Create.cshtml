@page
@model AdminDashCore.Pages.Admin.Clients.CreateModel
@{
    ViewData["Title"] = "Create Client";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-3 border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">Create New Client</h4>
                </div>
                <div class="card-body px-4">
                    <form method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Client.Name" class="form-label fw-semibold"></label>
                            <input asp-for="Client.Name" class="form-control" />
                            <span asp-validation-for="Client.Name" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Client.Position" class="form-label fw-semibold"></label>
                                <input asp-for="Client.Position" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Client.Office" class="form-label fw-semibold"></label>
                                <input asp-for="Client.Office" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Client.Age" class="form-label fw-semibold"></label>
                                <input asp-for="Client.Age" class="form-control" type="number" min="0" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Client.StartDate" class="form-label fw-semibold"></label>
                                <input asp-for="Client.StartDate" class="form-control" type="date" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Client.Salary" class="form-label fw-semibold"></label>
                            <input asp-for="Client.Salary" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">← Back</a>
                            <button type="submit" class="btn btn-success px-4">💾 Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
