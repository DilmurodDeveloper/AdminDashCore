@page
@model AdminDashCore.Pages.Admin.Clients.CreateModel
@{
    ViewData["Title"] = "Create Client";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-success text-white">
                    <h6 class="text-center">Create New Client</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-0">
                            <label asp-for="Client.Name" class="form-label"></label>
                            <input asp-for="Client.Name" class="form-control" />
                            <span asp-validation-for="Client.Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-0">
                            <label asp-for="Client.Position" class="form-label"></label>
                            <input asp-for="Client.Position" class="form-control" />
                        </div>

                        <div class="mb-1">
                            <label asp-for="Client.Office" class="form-label"></label>
                            <input asp-for="Client.Office" class="form-control" />
                        </div>

                        <div class="mb-1">
                            <label asp-for="Client.Age" class="form-label"></label>
                            <input asp-for="Client.Age" class="form-control" type="number" min="0" />
                        </div>

                        <div class="mb-1">
                            <label asp-for="Client.StartDate" class="form-label"></label>
                            <input asp-for="Client.StartDate" class="form-control" type="date" />
                        </div>

                        <div class="mb-2">
                            <label asp-for="Client.Salary" class="form-label"></label>
                            <input asp-for="Client.Salary" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="text-center justify-content-center">
                            <a asp-page="Index" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
