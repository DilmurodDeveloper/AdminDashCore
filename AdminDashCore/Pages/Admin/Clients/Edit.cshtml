@page "{id:int}"
@model AdminDashCore.Pages.Admin.Clients.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Client";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-3">
                <div class="card-header bg-warning text-white">
                    <h4 class="text-center">Edit Client</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Client.Id" />

                        <div class="mb-1">
                            <label asp-for="Client.Name" class="form-label"></label>
                            <input asp-for="Client.Name" class="form-control" />
                            <span asp-validation-for="Client.Name" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Client.Position" class="form-label fw-semibold"></label>
                                <input asp-for="Client.Position" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Client.Office" class="form-label fw-semibold"></label>
                                <input asp-for="Client.Office" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Client.Age" class="form-label fw-semibold"></label>
                                <input asp-for="Client.Age" class="form-control" type="number" min="0" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Client.StartDate" class="form-label fw-semibold"></label>
                                <input asp-for="Client.StartDate" class="form-control" type="date" />
                            </div>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Client.Salary" class="form-label"></label>
                            <input asp-for="Client.Salary" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Cancel</a>
                            <button type="submit" class="btn btn-warning">💾 Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
