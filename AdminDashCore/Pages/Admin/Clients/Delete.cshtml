@page "{id:int}"
@model AdminDashCore.Pages.Admin.Clients.DeleteModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4 border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h5 class="mb-0">🗑️ Confirm Delete</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete the following client? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">🧾 Name:</dt>
                        <dd class="col-sm-8">@Model.Client?.Name</dd>

                        <dt class="col-sm-4 fw-semibold">💼 Position:</dt>
                        <dd class="col-sm-8">@Model.Client?.Position</dd>

                        <dt class="col-sm-4 fw-semibold">💲 Salary:</dt>
                        <dd class="col-sm-8">@Model.Client?.Salary.ToString("C")</dd>
                    </dl>

                    <form method="post" class="mt-4 d-flex justify-content-between">
                        <input type="hidden" asp-for="Client.Id" />
                        <a asp-page="Index" class="btn btn-secondary">
                            ❌ Cancel
                        </a>
                        <button type="submit" class="btn btn-danger me-2">
                            ✅ Yes, Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
