@page "{id:int}"
@model AdminDashCore.Pages.Admin.Clients.DeleteModel
@{
    Layout = "_AdminLayout";
}
<h2>Delete Client</h2>

<h4>Are you sure you want to delete the following client?</h4>
<dl class="row">
    <dt class="col-sm-2">Name:</dt>
    <dd class="col-sm-10">@Model.Client?.Name</dd>

    <dt class="col-sm-2">Position:</dt>
    <dd class="col-sm-10">@Model.Client?.Position</dd>

    <dt class="col-sm-2">Salary:</dt>
    <dd class="col-sm-10">@Model.Client?.Salary.ToString("C")</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Client.Id" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
