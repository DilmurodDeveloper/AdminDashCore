@page "{id:int}"
@model AdminDashCore.Pages.Admin.Clients.DetailsModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Client Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-info text-white text-center">
                    <h5 class="mb-0">👤 Client Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold">🧾 Name:</dt>
                        <dd class="col-sm-8">@Model.Client?.Name</dd>

                        <dt class="col-sm-4 fw-semibold">💼 Position:</dt>
                        <dd class="col-sm-8">@Model.Client?.Position</dd>

                        <dt class="col-sm-4 fw-semibold">🏢 Office:</dt>
                        <dd class="col-sm-8">@Model.Client?.Office</dd>

                        <dt class="col-sm-4 fw-semibold">🎂 Age:</dt>
                        <dd class="col-sm-8">@Model.Client?.Age</dd>

                        <dt class="col-sm-4 fw-semibold">📅 Start Date:</dt>
                        <dd class="col-sm-8">@Model.Client?.StartDate.ToShortDateString()</dd>

                        <dt class="col-sm-4 fw-semibold">💲 Salary:</dt>
                        <dd class="col-sm-8">@Model.Client?.Salary.ToString("C")</dd>
                    </dl>
                </div>
                <div class="card-footer text-start">
                    <a asp-page="Index" class="btn btn-secondary">← Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
