@page
@model AdminDashCore.Pages.Admin.Clients.IndexModel
@{
    ViewData["Title"] = "Clients";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">👥 Clients</h2>
        <a class="btn btn-success" asp-page="Create">
            <i class="bi bi-plus-lg text-white fw-bold"></i> Create New
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th>👤 Name</th>
                        <th>💼 Position</th>
                        <th>🏢 Office</th>
                        <th>🎂 Age</th>
                        <th>📅 Start Date</th>
                        <th>💰 Salary</th>
                        <th class="text-center" style="width: auto;">⚙️ Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Clients != null && Model.Clients.Any())
                    {
                        var index = 1;
                        foreach (var item in Model.Clients)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.Name</td>
                                <td class="text-center">@item.Position</td>
                                <td class ="text-center">@item.Office</td>
                                <td class="text-center">@item.Age</td>
                                <td class="text-center">@item.StartDate.ToShortDateString()</td>
                                <td class="text-center">@item.Salary.ToString("C")</td>
                                <td class="text-end">
                                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil-fill"></i> Edit</a>
                                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1"><i class="bi bi-info-circle-fill"></i> Details</a>
                                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                No clients found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
