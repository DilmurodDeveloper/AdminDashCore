@page
@model AdminDashCore.Pages.Admin.Clients.IndexModel
@{
    ViewData["Title"] = "Clients";
    Layout = "_AdminLayout";
}

<h2>Clients</h2>

<p>
    <a class="btn btn-primary" asp-page="Create">➕ Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Start Date</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Position</td>
                <td>@item.Office</td>
                <td>@item.Age</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.Salary.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-page="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
