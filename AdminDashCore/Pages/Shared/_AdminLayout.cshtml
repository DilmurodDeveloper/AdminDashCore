@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper" style="width: 220px;">
            <div class="sidebar-heading text-white px-3 py-2">ADMIN PANEL</div>
            <div class="list-group list-group-flush mb-lg-5">
                <div class="list-group-flush text-capitalize text-secondary">CORE</div>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-page="/Admin/Dashboard">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>

                <div class="list-group-flush text-capitalize text-secondary">STORE</div>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-page="/Admin/Products/Index">
                    <i class="fas fa-box"></i> Products
                </a>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-page="/Admin/Orders/Index">
                    <i class="fas fa-shopping-cart"></i> Orders
                </a>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-page="/Admin/Categories/Index">
                    <i class="fas fa-tags"></i> Categories
                </a>

                <div class="list-group-flush text-capitalize text-secondary">ACCOUNTS</div>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-page="/Admin/Clients/Index">
                    <i class="fas fa-users"></i> Clients
                </a>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-page="/Admin/Messages/Index">
                    <i class="fas fa-envelope"></i> Messages
                </a>
            </div>
            <div class="text-secondary align-text-bottom">Logged in as: Admin</div>
        </div>
        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom px-3">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <button class="btn btn-dark me-5" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    @* <form class="d-flex" style="flex-grow: 1; justify-content: flex-end;"> *@
                    @*     <input class="form-control me-3" type="search" placeholder="Search for..." /> *@
                    @*     <button class="btn btn-primary me-5" type="submit"> *@
                    @*         <i class="fas fa-search"></i> *@
                    @*     </button> *@
                    @* </form> *@
                    <div class="dropdown">
                        <button class="btn btn-dark dropdown-toggle me-3" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="/profile">Profile Details</a></li>
                            <li><a class="dropdown-item" href="/logout">Log Out</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="container-fluid mt-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        document.getElementById("menu-toggle").addEventListener("click", function() {
            const sidebar = document.getElementById("sidebar-wrapper");
            const pageContent = document.getElementById("page-content-wrapper");

            sidebar.classList.toggle("d-none"); 

            if (sidebar.classList.contains("d-none")) {
                pageContent.classList.remove("expanded"); 
            } else {
                pageContent.classList.add("expanded"); 
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>